modules = ["nodejs-20", "web"]
run = "npm run dev"

[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["run", "cargo-dist"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
